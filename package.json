{
  "name": "create-react-app-base",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "start-precompile-sass": "npm run sass-build & cross-env REACT_APP_DESIGN_MODE=PRECOMPILE_SASS react-scripts start",
    "build": "react-scripts build && npm run build-deploy",
    "deploy": "git subtree push --prefix deploy origin deploy",
    "lint": "node node_modules/eslint/bin/eslint.js --max-warnings=0 src",
    "test": "react-scripts test --env=jsdom",
    "build-deploy": "node ./utility/build-copy.js && gzip -9 -r deploy/client/static && gzip -9 -r deploy/client/service-worker.js",
    "build-start": "cd deploy && npm install && npm start",
    "precommit": "lint-staged",
    "sass-build": "./node_modules/.bin/node-sass-chokidar src/styles/ -o src/styles/ --output-style compressed",
    "screenshots-build": "node ./utility/build-screenshots.js",
    "style-guide-build": "node ./utility/build-style-guide.js",
    "style-guide-start": "cross-env REACT_APP_TYPE=STYLE_GUIDE react-scripts start",
    "tests-build": "node ./utility/build-test.js"
  },
  "dependencies": {
    "bootstrap": "4.1.1",
    "bootswatch": "4.1.1",
    "dayjs": "1.6.9",
    "loaders.css": "0.1.2",
    "moment": "2.22.2",
    "prop-types": "15.6.1",
    "react-clipboard.js": "2.0.0",
    "react-datepicker": "1.5.0",
    "react-dom": "16.4.1",
    "react-loadable": "5.4.0",
    "react-loaders": "3.0.1",
    "react-router-dom": "4.3.1",
    "react-scripts": "2.0.0-next.3e165448",
    "react-syntax-highlighter": "7.0.4",
    "react-table": "6.8.6",
    "react": "16.4.1",
    "reactstrap": "6.1.0"
  },
  "devDependencies": {
    "cross-env": "5.2.0",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "node-sass-chokidar": "1.3.0",
    "node-sass": "4.9.0",
    "prettier": "1.13.5",
    "puppeteer": "1.5.0",
    "react-docgen": "3.0.0-beta12"
  },
  "engines": {
    "node": ">=7.6.0 <10.0.0 "
  },
  "eslintConfig": {
    "extends": "./node_modules/eslint-config-react-app/index.js",
    "rules": {
      "no-console": 1,
      "react/default-props-match-prop-types": 1,
      "react/prop-types": 1,
      "react/no-unused-prop-types": 1,
      "react/sort-prop-types": 1
    }
  },
  "lint-staged": {
    "linters": {
      "src/*.{js,json,css}": [
        "prettier --write",
        "git add"
      ],
      "src/*.js": [
        "npm run lint",
        "git add"
      ]
    }
  },
  "prettier": {
    "filepath": "src",
    "jsxBracketSameLine": true,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">0.25%",
      "not op_mini all",
      "ie 11"
    ]
  }
}
