{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app-start": "cd packages/app && yarn start",
    "app-build": "cd packages/app && yarn build",
    "app-deploy": "cd packages/app && yarn deploy",
    "style-guide-start": "cd packages/style-guide && yarn start",
    "style-guide-build": "cd packages/style-guide && yarn build",
    "style-guide-deploy": "cd packages/style-guide && yarn deploy",
    "components-start": "cd packages/components && yarn start",
    "lint": "node node_modules/eslint/bin/eslint.js --max-warnings=0 packages/**/src",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "lerna": "^2.11.0",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "prettier": "1.13.5"
  },
  "eslintConfig": {
    "extends": "./node_modules/eslint-config-react-app/index.js",
    "rules": {
      "no-console": 1,
      "react/default-props-match-prop-types": 1,
      "react/prop-types": 1,
      "react/no-unused-prop-types": 1,
      "react/sort-prop-types": 1
    }
  },
  "lint-staged": {
    "linters": {
      "packages/**/src/*.{js,json,css}": [
        "prettier --write",
        "git add"
      ],
      "packages/**/src/*.js": [
        "npm run lint",
        "git add"
      ]
    }
  },
  "prettier": {
    "filepath": "src",
    "jsxBracketSameLine": true,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  }
}
