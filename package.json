{
  "name": "react-base",
  "version": "0.1.1",
  "private": true,
  "dependencies": {
    "bootstrap": "4.1.1",
    "bootswatch": "4.1.1",
    "dayjs": "^1.6.4",
    "loaders.css": "^0.1.2",
    "prop-types": "15.6.1",
    "react": "16.4.0",
    "react-dom": "16.4.0",
    "react-loadable": "^5.4.0",
    "react-loaders": "^3.0.1",
    "react-router-dom": "^4.2.2",
    "react-scripts": "2.0.0-next.66cc7a90",
    "reactstrap": "6.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-screenshots": "node ./utility/build-screenshots.js",
    "build-tests": "node ./utility/build-test.js",
    "test": "react-scripts test --env=jsdom",
    "style-guide-start": "styleguidist server --config ./src/style-guide/styleguide.config.js",
    "style-guide-start2": "cross-env REACT_APP_TYPE=STYLE_GUIDE react-scripts start",
    "lint": "node node_modules/eslint/bin/eslint.js --max-warnings=0 src",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "cross-env": "^5.1.6",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "node-sass": "4.9.0",
    "prettier": "^1.13.4",
    "puppeteer": "^1.4.0",
    "react-styleguidist": "6.5.3",
    "serve": "^7.1.5"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  },
  "eslintConfig": {
    "extends": "./node_modules/eslint-config-react-app/index.js",
    "rules": {
      "no-console": 1,
      "react/default-props-match-prop-types": 1,
      "react/prop-types": 1,
      "react/no-unused-prop-types": 1,
      "react/sort-prop-types": 1,
      "jsx-a11y/href-no-hash": 0
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,css}": [
        "prettier --write",
        "git add"
      ],
      "*.js": [
        "npm run lint",
        "git add"
      ]
    }
  },
  "prettier": {
    "filepath": "src",
    "jsxBracketSameLine": true,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  }
}
